{
    "extends": [
        "standard", "standard-react",
        "eslint:recommended",
        "plugin:react/recommended"
    ],

    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-no-bind": [1, {
            "ignoreRefs": true
        }],
        "react/jsx-no-literals": 2,
        "react/no-unused-prop-types": 0
    }
}
